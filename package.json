{
  "name": "serenityjs-api-automation-students-project",
  "version": "1.0.0",
  "description": "A simple Serenity JS with Typescript API Automation project",
  "main": "index.js",
  "scripts": {
    "postinstall": "serenity-bdd update",
    "clean": "rimraf target",
    "test": "failsafe clean postinstall test:execute test:report",
    "test:execute": "cross-env BASE_API_URL=http://localhost:3000 npx cucumber-js --publish-quiet --require-module ts-node/register --format @serenity-js/cucumber --tags @wip --require ./features/support/*.ts --require ./features/step-definitions/*.steps.ts",
    "test:report": "serenity-bdd run --features ./features",
    "start": "mkdirp target/site/serenity && npx http-server -p 8080 target/site/serenity -s -o",
    "lint": "eslint --ext ts --config .eslintrc.js .",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "serenity-js",
    "bdd",
    "cucumber",
    "API-testing"
  ],
  "engines": {
    "node": "^16.13 || ^18.12 || ^20"
  },
  "author": "Juan Guevara",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@serenity-js/assertions": "^3.10.3",
    "@serenity-js/console-reporter": "^3.10.3",
    "@serenity-js/core": "^3.10.3",
    "@serenity-js/cucumber": "^3.10.3",
    "@serenity-js/rest": "^3.10.3",
    "@serenity-js/serenity-bdd": "^3.10.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@types/crypto-js": "^4.1.2",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "http-server": "^14.1.1",
    "mkdirp": "^3.0.1",
    "npm-failsafe": "^1.0.0",
    "rimraf": "^5.0.1",
    "tiny-types": "^1.20.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
